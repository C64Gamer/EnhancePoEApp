                            <TextBlock
                                Grid.Column="1"
                                Grid.Row="17"
                                VerticalAlignment="Center"
                                Text="Weapons:" />

                            <!-- Weapons Always Active -->
                            <CheckBox
                                Grid.Column="3"
                                Grid.Row="17"
                                Width="200"
                                VerticalAlignment="Center"
                                IsChecked="{Binding Settings.LootFilterWeaponsAlwaysActive, Mode=TwoWay}" />

                        </Grid>

                    </Grid>

                </TabItem>
