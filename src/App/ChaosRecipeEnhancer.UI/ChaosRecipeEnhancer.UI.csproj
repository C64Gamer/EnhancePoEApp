<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <!--Build Settings-->
        <TargetFramework>net7.0-windows</TargetFramework>
        <OutputType>WinExe</OutputType>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <UseWindowsForms>True</UseWindowsForms>
        <UseWPF>true</UseWPF>

        <!--Application Name & Version-->
        <AssemblyName>ChaosRecipeEnhancer</AssemblyName>
        <MapFileExtensions>true</MapFileExtensions>
        <ApplicationRevision>0</ApplicationRevision>
        <ApplicationVersion>2.0</ApplicationVersion>
        <UseApplicationTrust>false</UseApplicationTrust>
        <PublishWizardCompleted>true</PublishWizardCompleted>
        <BootstrapperEnabled>true</BootstrapperEnabled>


        <!--Update Settings-->
        <IsWebBootstrapper>false</IsWebBootstrapper>
        <Install>true</Install>
        <InstallFrom>Disk</InstallFrom>
        <UpdateEnabled>true</UpdateEnabled>
        <UpdateMode>Foreground</UpdateMode>
        <UpdateInterval>1</UpdateInterval>
        <UpdateIntervalUnits>Days</UpdateIntervalUnits>
        <UpdatePeriodically>true</UpdatePeriodically>
        <UpdateRequired>false</UpdateRequired>
        <ImportWindowsDesktopTargets>true</ImportWindowsDesktopTargets>
    </PropertyGroup>

    <PropertyGroup>
        <TargetZone>LocalIntranet</TargetZone>
        <PlatformTarget>AnyCPU</PlatformTarget>
    </PropertyGroup>

    <PropertyGroup>
        <ApplicationIcon>CREIcon.ico</ApplicationIcon>
    </PropertyGroup>

    <ItemGroup>
        <Resource Include="Assets\Fonts\Password.ttf" />
        <Resource Include="Assets\Images\Amulet.png" />
        <Resource Include="Assets\Images\Belt.png" />
        <Resource Include="Assets\Images\Boots.png" />
        <Resource Include="Assets\Images\BodyArmor.png" />
        <Resource Include="Assets\Images\Gloves.png" />
        <Resource Include="Assets\Images\Helmet.png" />
        <Resource Include="Assets\Images\Ring.png" />
        <Resource Include="Assets\Images\Weapon.png" />
        <None Update="Assets\Sounds\FilterChanged.mp3">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Assets\FilterStyles\NormalItemsStyle.txt">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Properties\Settings.settings">
            <Generator>PublicSettingsSingleFileGenerator</Generator>
            <LastGenOutput>Settings.Designer.cs</LastGenOutput>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Extended.Wpf.Toolkit" Version="4.5.0" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="BusinessLogic\README.md" />
        <Content Include="DynamicControls\README.md" />
        <Content Include="Extensions\README.md" />
        <Content Include="Model\README.md" />
        <Resource Include="CREIcon.ico" />
        <Resource Include="Assets\Icons\CREIcon.ico" />
        <Content Include="Assets\Sounds\ItemPickedUp.mp3">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <Compile Update="Properties\Resources.Designer.cs">
            <DesignTime>True</DesignTime>
            <AutoGen>True</AutoGen>
            <DependentUpon>Resources.resx</DependentUpon>
        </Compile>
        <Compile Update="Properties\Settings.Designer.cs">
            <DesignTimeSharedInput>True</DesignTimeSharedInput>
            <AutoGen>True</AutoGen>
            <DependentUpon>Settings.settings</DependentUpon>
        </Compile>
        <Compile Remove="UserControls\SettingsForms\GeneralForms\SoundForm.xaml.cs" />
        <Compile Remove="UserControls\SettingsForms\GeneralForms\SoundFormViewModel.cs" />
        <Compile Remove="UserControls\SetTrackerOverlayDisplays\MinifiedDisplay.xaml.cs" />
        <Compile Remove="View\HotkeyView.xaml.cs" />
        <Compile Remove="View\HotkeyViewModel.cs" />
        <Compile Remove="UserControls\SetTrackerOverlayDisplays\VerticalMinifiedDisplay.xaml.cs" />
        <Compile Remove="UserControls\SetTrackerOverlayDisplays\VerticalStandardDisplay.xaml.cs" />
        <Compile Remove="UserControls\SetTrackerOverlayDisplays\OnlyMinifiedButtonsDisplay.xaml.cs" />
        <Compile Remove="UserControls\SetTrackerOverlayDisplays\OnlyButtonsDisplay.xaml.cs" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Update="Properties\Resources.resx">
            <Generator>ResXFileCodeGenerator</Generator>
            <LastGenOutput>Resources.Designer.cs</LastGenOutput>
        </EmbeddedResource>
    </ItemGroup>


    <ItemGroup>
        <Page Remove="UserControls\SettingsForms\GeneralForms\SoundForm.xaml" />
        <Page Remove="UserControls\SetTrackerOverlayDisplays\MinifiedDisplay.xaml" />
        <Page Remove="View\HotkeyView.xaml" />
        <Page Remove="UserControls\SetTrackerOverlayDisplays\VerticalMinifiedDisplay.xaml" />
        <Page Remove="UserControls\SetTrackerOverlayDisplays\VerticalStandardDisplay.xaml" />
        <Page Remove="UserControls\SetTrackerOverlayDisplays\OnlyMinifiedButtonsDisplay.xaml" />
        <Page Remove="UserControls\SetTrackerOverlayDisplays\OnlyButtonsDisplay.xaml" />
    </ItemGroup>

</Project>